    "copy-license": "cp LICENSE dist/libs/light-localize-router",
    "copy-changelog": "cp CHANGELOG.md dist/libs/light-localize-router",
    "copy-files": "run-s copy-readme copy-license",
    "bump-version:major": "npm version major --force && cd libs/light-localize-router && npm version major --force",
    "bump-version:minor": "npm version minor --force && cd libs/light-localize-router && npm version minor --force",
    "bump-version:patch": "npm version patch --force && cd libs/light-localize-router && npm version patch --force",
    "build:lib-pack": "nx build light-localize-router && npm run copy-files &&  cd dist/libs/light-localize-router && npm pack",
    "commit-git": "git commit -m \"build: adds new release\" && git push origin && git push origin --tags",
    "pre-publish:minor": "run-s bump-version:minor build:lib-pack commit-git",
    "pre-publish:major": "run-s bump-version:major build:lib-pack commit-git",
    "pre-publish:patch": "run-s bump-version:patch build:lib-pack commit-git",
    "workspace-generator": "nx workspace-generator"
  },
